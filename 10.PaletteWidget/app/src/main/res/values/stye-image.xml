<?xml version="1.0" encoding="utf-8"?>
<!--7. En este archivo podemos especificar los estilos que se le aplicaran a la imagen shapeable Image view -->
<resources>
    <!--8. Para hacer una forma circular se puede colocar en la propiedad cornerSize un valor de 50%-->
    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>
    <!--9. Para hcer una forma con las esquinas redondeadas a la propiedad cornerSize se le aplica un porcentaje menor-->
    <style name="RounderSquare">
        <item name="cornerSize">10%</item>
    </style>
    <!--10 Para hacer un corte en una esquina se seleciona la propiedad cornerFamily con el valor de cut-->
    <style name="CornerCut">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">cut</item>
    </style>
    <!--11 Se puede especificar la esquina que se quiere cortar o redondear-->
    <style name="SpecificCornerCut">
        <item name="cornerSizeTopLeft">45dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomRight">45dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>
</resources>