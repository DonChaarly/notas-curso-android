<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".calculadora"
    android:layout_rowWeight="6"
    android:layout_columnWeight="4"
    android:rowCount="6"
    android:columnCount="4">

    <TextView
        android:id="@+id/tvTotal"
        style="@style/AppTheme.BotonCalculadora.Total"
        android:text="Total:"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:textAlignment="textStart"
        android:layout_width="match_parent"
        android:layout_columnSpan="4" />

    <TextView
        android:id="@+id/signo_c"
        android:tag="C"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        android:layout_marginRight="1dp"
        android:text="C"
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/signo_del"
        android:tag="del"
        android:background="#CA2828"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_vertical"
        android:layout_marginLeft="0dp"
        android:paddingLeft="31dp"
        android:paddingRight="31dp"
        android:text=""
        android:drawableStart="@drawable/ic_delete"
        android:layout_marginRight="1dp"
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/numero_7"
        android:tag="7"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="7"
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/numero_8"
        android:tag="8"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="8"
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/numero_9"
        android:tag="9"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="2"
        android:text="9"
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/numero_4"
        android:tag="4"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:text="4"
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/numero_5"
        android:tag="5"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:text="5"
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/numero_6"
        android:tag="6"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="3"
        android:text="6"
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/numero_1"
        android:tag="1"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:text="1"
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/numero_2"
        android:tag="2"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:text="2"
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/numero_3"
        android:tag="3"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="4"
        android:text="3"
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/punto"
        android:tag="."
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="5"
        android:gravity="center_horizontal"
        android:text="."
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/cero"
        android:tag="0"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="1"
        android:layout_row="5"
        android:text="0"
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/signo_igual"
        android:tag="="
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="5"
        android:text="="
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/signo_div"
        android:tag="รท"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_column="3"
        android:layout_gravity="fill"
        android:gravity="center"
        android:layout_row="1"
        android:layout_columnSpan="1"
        android:text="รท"
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/signo_por"
        android:tag="x"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_column="3"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:text="x"
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/signo_menos"
        android:tag="-"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_column="3"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:text="-"
        android:onClick="capturaBoton"/>
    <TextView
        android:id="@+id/signo_mas"
        android:tag="+"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_column="3"
        android:layout_gravity="fill"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:text="+"
        android:onClick="capturaBoton"/>

</GridLayout>