<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--26. Se va a hacer una serie de estilos para aplicar a los botones de la calculadora
            Para evitar colocar todos estos atributos a cada uno de los elementos del layout-->
    <!--27. Se hace uso de un parent el cual ya tiene configurado una serie de estilos-->
    <style name="AppTheme.BotonCalculadora" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--28. El siguiente elemento heredara del anterior, teniento los atributos configuardos en el padre-->
    <style name="AppTheme.BotonCalculadora.Azul" parent="AppTheme.BotonCalculadora">
        <item name="android:background">#233383</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>
    <style name="AppTheme.BotonCalculadora.Rojo" parent="AppTheme.BotonCalculadora">
        <item name="android:background">#CA2828</item>
    </style>
    <style name="AppTheme.BotonCalculadora.Total" parent="AppTheme.BotonCalculadora">
        <item name="background">@color/white</item>
        <item name="android:textColor">#233383</item>
    </style>

</resources>